<header>
  <div class='container-fluid'>
    <div class='header--nav-branding'>
      <%= image_tag('logo-penn_state_university_libraries.png', :alt => "Site logo") %>
      <h1 class="header-mark--name-slogan">
          <a href='/' class='site-title'>
          <%= I18n.t('ui_page.heading') %>
          </a>
        </h1>
    </div>
  </div>
</header>

<main class="container-fluid">
  <% flash.each do |_, msg| %>
    <div class='alert'>
      <%= msg %>
    </div>
  <% end %>
  <div>
    <h2><%= I18n.t('ui_page.upload.heading') %></h2>
    <p><%= I18n.t('ui_page.upload.subheading') %></p>
  </div>

  <section>
    <%= form_with url: jobs_path do |form| %>
        <%= form.label :file, class: "visually-hidden" %>
        <%= form.file_field :file, required: true %>
      <div>
        <%= form.submit 'Upload', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </section>
</main>

<footer>
</footer>
